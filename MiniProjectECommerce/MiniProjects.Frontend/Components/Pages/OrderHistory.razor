@page "/history"
@using System.Net.Http.Json
@using MiniProjects.Frontend.Models
@inject HttpClient Http

@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<h3>📜 ประวัติการสั่งซื้อ</h3>

@if (orders == null)
{
    <p><em>กำลังโหลดประวัติการสั่งซื้อ...</em></p>
}
else if (!orders.Any())
{
    <p>คุณยังไม่มีประวัติการสั่งซื้อในระบบ</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>รหัสสั่งซื้อ</th>
                <th>วันที่สั่งซื้อ</th>
                <th>ยอดรวม</th>
                <th>สถานะ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in orders)
            {
                <tr>
                    <td>**#@order.OrderId**</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td><span class="text-success">฿@order.TotalAmount.ToString("N2")</span></td>
                    <td>
                        <span class="badge @GetStatusBadge(order.OrderStatus)">@order.OrderStatus</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private Order[]? orders;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // เรียกใช้ GET API ที่ OrdersController
            orders = await Http.GetFromJsonAsync<Order[]>("api/Orders");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching orders: {ex.Message}");
            // อาจแสดงข้อความ Error ให้ผู้ใช้เห็น
        }
    }

    private string GetStatusBadge(string status)
    {
        return status switch
        {
            "Shipped" => "bg-primary",
            "Delivered" => "bg-success",
            "Canceled" => "bg-danger",
            _ => "bg-warning", // Pending, Processing, etc.
        };
    }
}