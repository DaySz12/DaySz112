@page "/history"
@using MiniProjects.Frontend.Models
@using System.Net.Http.Json
@inject HttpClient Http

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<h3>📜 ประวัติการสั่งซื้อ (Order History)</h3>

@if (orders == null && errorMessage == null)
{
    <p><em>กำลังโหลดประวัติการสั่งซื้อ...</em></p>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger">
        <strong>เกิดข้อผิดพลาด:</strong> @errorMessage
    </div>
}
else if (orders != null && orders.Count == 0)
{
    <div class="alert alert-info">คุณยังไม่มีคำสั่งซื้อใดๆ</div>
}
else
{
    @foreach (var order in orders)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">คำสั่งซื้อ #@order.OrderId</h5>
                <span class="badge bg-@GetStatusClass(order.OrderStatus)">@order.OrderStatus</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>วันที่สั่งซื้อ:</strong> @order.OrderDate.ToLocalTime().ToString("dd MMMM yyyy HH:mm")</p>
                        <p><strong>ลูกค้า:</strong> @order.Customer?.FirstName @order.Customer?.LastName</p>
                        <p><strong>ที่อยู่จัดส่ง:</strong> @order.ShippingAddress</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <h4 class="text-success mb-0">ยอดรวม: ฿@order.TotalAmount.ToString("N2")</h4>
                    </div>
                </div>

                <h6 class="mt-3">รายการสินค้า (@order.OrderItems?.Count รายการ)</h6>
                <ul class="list-group list-group-flush">
                    @if (order.OrderItems != null)
                    {
                        @foreach (var item in order.OrderItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@item.Product?.Name</strong>
                                    <small class="text-muted d-block">(@item.Quantity x ฿@item.UnitPrice.ToString("N2"))</small>
                                </div>
                                <span>฿@(item.Quantity* item.UnitPrice).ToString("N2")</span>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    }
}

@code {
    private List<Order>? orders;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            orders = await Http.GetFromJsonAsync<List<Order>>("api/Orders");
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"ไม่สามารถเชื่อมต่อกับ API ได้: {ex.Message}";
        }
        catch (Exception ex)
        {
            errorMessage = $"เกิดข้อผิดพลาดในการโหลดข้อมูล: {ex.Message}";
        }
    }

    private string GetStatusClass(string status) => status switch
    {
        "Processing" => "warning",
        "Shipped" => "primary",
        "Completed" => "success",
        "Cancelled" => "danger",
        _ => "secondary"
    };
}