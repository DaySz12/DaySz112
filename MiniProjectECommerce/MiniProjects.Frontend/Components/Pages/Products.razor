@page "/products"
@page "/"
@using System.Net.Http.Json
@using MiniProjects.Frontend.Models
@using MiniProjects.Frontend.Services
@inject HttpClient Http
@inject MiniProjects.Frontend.Services.ICartService CartService
@inject NavigationManager Navigation

@* ใช้ Server Render Mode *@
@rendermode @(new InteractiveServerRenderMode(prerender: false))


<h3>🛒 รายการสินค้า</h3>

@if (errorMessage != null)
{
    <div class="alert alert-danger">❌ เกิดข้อผิดพลาดในการโหลดข้อมูล: @errorMessage</div>
}
else if (products == null)
{
    <p><em>กำลังโหลดสินค้า...</em></p>
}
else
{
    <div class="row">
        @foreach (var product in products)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-success">**฿@product.Price.ToString("N2")**</p>
                        <p class="card-text"><small class="text-muted">ในคลัง: @product.StockQuantity</small></p>
                        <button class="btn btn-primary" @onclick="() => AddToCart(product)">เพิ่มลงตะกร้า</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private Product[]? products;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            products = await Http.GetFromJsonAsync<Product[]>("api/Products");
        }
        catch (Exception ex)
        {
            errorMessage = $"ไม่สามารถดึงข้อมูลสินค้าได้: {ex.Message}";
        }
    }

    private void AddToCart(Product product)
    {
        CartService.AddItem(product);

        // นำทางผู้ใช้ไปยังหน้าตะกร้าสินค้าทันที
        Navigation.NavigateTo("/cart");
    }
}